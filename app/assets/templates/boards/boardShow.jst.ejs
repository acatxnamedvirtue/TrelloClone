<h2><%= board.escape('title') %></h1>

<h2>Lists</h2>

<ul class='sortable lists group'>

  <% board.lists().forEach(function (list) { %>
    <li class='list' data-id='<%= list.escape('id')%>' data-ord='<%= list.escape('ord') %>'>
      <%= list.escape('title') %>
      <ul class='sortable cards' data-list-id='<%= list.escape('id') %>'>
        <% list.cards().each(function (card) { %>
          <li class='card' data-card-id='<%= card.escape('id')%>' data-ord='<%= card.escape('ord') %>'>
            <%= card.escape('title') %><br>
            <%= card.escape('description') %>
            <button
              data-card-id="<%= card.id %>"
              data-list-id="<%= list.id %>"
              class='delete-card'>Delete Card</button>
          </li><br>
        <% }) %>
      </ul>
      <a href="#/boards/<%= board.id %>/lists/<%= list.id %>/cards/new">New Card</a>
      <button data-list-id="<%= list.id %>" class='delete-list'>Delete List</button>
    </li>
  <% }) %>
    <script>$('.sortable').sortable()</script>
</ul>
<a href='#/boards/<%= board.id %>/lists/new'>New List</a>


<button class='delete'>Delete Board</button>
